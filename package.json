{
  "name": "twixt",
  "version": "1.0.0",
  "description": "A classic 2-player game",
  "main": "index.js",
  "repository": "https://github.com/mikegw/twixt.git",
  "author": "Mike Williamson <mikewilliamson86@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "node scripts/build.mjs --sourcemap",
    "build:test":  "node scripts/build.mjs --sourcemap --env=test",
    "build:prod":  "node scripts/build.mjs --env=production",
    "cypress:start": "yarn run build:test && yarn run cypress open",
    "test": "mocha -r ts-node/register 'test/**/*.ts'",
    "test:feature": "yarn run cypress run",
    "watch": "yarn build --watch",
    "watch:test": "yarn run build:test --watch",
    "lint": "yarn run eslint"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cypress": "^1.1.3",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.58.0",
    "@typescript-eslint/parser": "^5.58.0",
    "chai": "^4.3.7",
    "cypress": "^12.9.0",
    "esbuild": "^0.17.16",
    "eslint": "^8.38.0",
    "mocha": "^10.2.0",
    "mri": "^1.2.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "firebase": "^9.19.1"
  }
}
